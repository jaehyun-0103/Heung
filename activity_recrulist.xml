<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/recruit_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:padding="8dp"
        android:src="@drawable/music_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recruit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="모집글"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/recruit_btn_back"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/recruit_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="필터"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/recruit_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recruit_title" />

    <Button
        android:id="@+id/recruit_filter_busking"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:text="버스킹"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/recruit_title"
        app:layout_constraintEnd_toStartOf="@+id/recruit_filter_class"
        app:layout_constraintTop_toTopOf="@+id/recruit_title" />

    <Button
        android:id="@+id/recruit_filter_class"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="클래스"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/recruit_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recruit_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recruit_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/recruit_create"
        app:layout_constraintTop_toBottomOf="@+id/recruit_title"
        tools:listitem="@layout/item_recruit" />

    <Button
        android:id="@+id/recruit_create"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="게시글 작성"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recruit_list" />

</androidx.constraintlayout.widget.ConstraintLayout>
