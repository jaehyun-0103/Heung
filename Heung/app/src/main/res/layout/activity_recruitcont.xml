<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout_already"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/recruit_content_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/music_icon"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/recruit_content_participant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="참여하기"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/recruit_content_author"
        android:layout_width="79dp"
        android:layout_height="18dp"
        android:textSize="12sp"
        android:layout_toEndOf="@id/recruit_content_profile"
        android:layout_alignTop="@id/recruit_content_profile"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/recruit_content_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recruit_content_author"
        android:layout_toEndOf="@id/recruit_content_profile"
        android:layout_marginTop="8dp"
        android:text="@string/date"
        android:textSize="12sp" />

    <View
        android:id="@+id/recruit_content_title_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_below="@id/recruit_content_date"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/recruit_content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="18sp"
        android:layout_below="@id/recruit_content_title_line"
        android:layout_marginTop="8dp" />

    <View
        android:id="@+id/recruit_content_content_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_below="@id/recruit_content_title"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/recruit_content_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/content"
        android:textSize="14sp"
        android:layout_below="@id/recruit_content_content_line"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/recruit_content_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recruit_type"
        android:textSize="12sp"
        android:layout_below="@id/recruit_content_content"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/recruit_content_endDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/end_date"
        android:textSize="12sp"
        android:layout_below="@id/recruit_content_type"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/recruit_content_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/max_participants"
        android:textSize="12sp"
        android:layout_below="@id/recruit_content_endDate"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/recruit_content_curr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/current_participants"
        android:textSize="12sp"
        android:layout_below="@id/recruit_content_max"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/recruit_content_session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/session_type"
        android:textSize="12sp"
        android:layout_below="@id/recruit_content_curr"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/recruit_content_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/class_type"
        android:textSize="12sp"
        android:layout_below="@id/recruit_content_session"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:id="@+id/recruit_content_button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true"
        android:layout_below="@id/recruit_content_class"
        android:layout_marginTop="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recruit_content_replyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recruit_content_button_back"
        android:layout_above="@id/edit_comment"
        android:layout_marginTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <Button
        android:id="@+id/recruit_reply_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/recruit_content_replyRecyclerView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="8dp"
        android:text="게시글 수정"
        android:textSize="12sp" />

    <Button
        android:id="@+id/recruit_reply_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시글 삭제"
        android:textSize="12sp"
        android:layout_toStartOf="@id/recruit_reply_modify"
        android:layout_alignTop="@id/recruit_content_replyRecyclerView"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:id="@+id/edit_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_alignParentBottom="true">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/comment_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="#a0a4a8"
            app:boxStrokeColor="#a0a4a8"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:endIconMode="clear_text"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="대댓글을 입력해주세요"
                android:inputType="text"
                android:textSize="12sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:padding="0dp"
            android:stateListAnimator="@null"
            android:text="완료"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
