<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Heung"
        tools:targetApi="31">
        <activity android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:host="oauth"
                    android:scheme="네이티브 키" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SelfProfAdapter"
            android:exported="true" />
        <activity
            android:name=".OtherProfActivity"
            android:exported="false" />
        <activity
            android:name=".RentActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:launchMode="singleTask"
            android:exported="true" > <!-- 이 줄로 이동되었습니다. -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecrutWriteActivity"
            android:exported="false" />
        <activity
            android:name=".PostWriteActivity"
            android:exported="false" />
        <activity
            android:name=".RecruContActivity"
            android:exported="false" />
        <activity
            android:name=".PostContActivity"
            android:exported="false" />
        <activity
            android:name=".CalActivity"
            android:exported="false" />
        <activity
            android:name=".RecruListActivity"
            android:exported="false" />
        <activity
            android:name=".PostListActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <activity
            android:name=".SelfProfActivity"
            android:exported="true"/>

    </application>

</manifest>